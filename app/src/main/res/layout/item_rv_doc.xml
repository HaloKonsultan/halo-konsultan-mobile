<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <TextView
        android:id="@+id/docNumber"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_number_upload_doc"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/docTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="24dp"
        android:layout_marginStart="16dp"
        android:lineSpacingExtra="10sp"
        android:text="Foto KTP"
        android:textSize="14sp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/docNumber"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iconCheck"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_baseline_check_circle_outline_24"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/docTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_unggah"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_medium"
        android:gravity="center"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/unggah"
        android:textAllCaps="false"
        android:textColor="@color/primary_black"
        android:textSize="12sp"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/primary_black" />

    <TextView
        android:id="@+id/docDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ini adalah deskripsi dari dokumen foto KTP"
        app:layout_constraintStart_toStartOf="@+id/docTitle"
        app:layout_constraintTop_toBottomOf="@+id/iconCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>