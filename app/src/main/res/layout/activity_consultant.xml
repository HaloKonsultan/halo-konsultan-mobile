<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.consultant.ConsultantActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="80dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:scrollbarSize="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_consultant"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/consultant_photo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_consultant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:lineSpacingExtra="2sp"
                android:text="@string/sayu_ogiwara_s_h"
                android:textColor="@color/primary_black"
                app:layout_constraintTop_toBottomOf="@id/img_consultant"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_consultant_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/konsultan_hukum_perdata"
                android:fontFamily="@font/inter_regular"
                android:textSize="12sp"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/tv_consultant_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_consultant_stat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_consultant_category">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_consultant_total_likes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_200_orang"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4sp"
                            android:textColor="@color/primary_blue"
                            android:layout_gravity="center"
                            android:drawableTint="@color/primary_blue"
                            android:drawablePadding="8dp"
                            app:drawableStartCompat="@drawable/ic_heart" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/menyukai"
                            android:textSize="12sp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_consultant_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sidoarjo"
                            android:fontFamily="@font/inter_regular"
                            android:textSize="12sp"
                            android:lineSpacingExtra="4sp"
                            android:textColor="@color/primary_blue"
                            android:layout_gravity="center"
                            android:drawableTint="@color/primary_blue"
                            android:drawablePadding="8dp"
                            app:drawableStartCompat="@drawable/ic_pin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/lokasi"
                            android:textSize="12sp"
                            android:layout_gravity="center" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tentang_saya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/label"
                android:lineSpacingExtra="4sp"
                android:text="@string/tentang_saya"
                app:layout_constraintTop_toBottomOf="@id/ll_consultant_stat"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_consultant_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:text="@string/saya_adalah_konsultan_hukum_perdata_dengan_pengalaman_lebih_dari_6_tahun_di_bidang_ini_saya_telah_bekerja_sama_dengan_beberapa_perusahaan_besar_untuk_menangani_permasalahan_mereka"
                app:layout_constraintTop_toBottomOf="@id/tv_tentang_saya"
                app:layout_constraintStart_toStartOf="parent"/>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/tv_consultant_desc"
                />

            <TextView
                android:id="@+id/tv_pengalaman_pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/pengalaman_pekerjaan"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/label"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pengalaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pengalaman_pekerjaan"/>

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/rv_pengalaman"
                />

            <TextView
                android:id="@+id/tv_dokumentasi_pekerjaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/dokumentasi_pekerjaan"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/label"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_dokumentasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_dokumentasi_pekerjaan"/>

            <View
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/rv_dokumentasi"
                />

            <TextView
                android:id="@+id/tv_pendidikan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/pendidikan"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/label"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/line3"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pendidikan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_pendidikan"/>

            <View
                android:id="@+id/line4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/line"
                app:layout_constraintTop_toBottomOf="@id/rv_pendidikan"
                />

            <TextView
                android:id="@+id/tv_bidang_keahlian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/bidang_keahlian"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/label"
                android:lineSpacingExtra="4sp"
                app:layout_constraintTop_toBottomOf="@id/line4"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_keahlian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_bidang_keahlian"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_cta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_discuss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginEnd="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/diskusi_rp_25_000"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:strokeColor="@color/black"
            app:backgroundTint="@color/white"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_booking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/booking_konsultasi"
            android:textAllCaps="false"
            app:backgroundTint="@color/primary_blue"
            app:cornerRadius="8dp"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>