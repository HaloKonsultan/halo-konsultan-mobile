<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.consultation.DetailConsultationActivity">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/orange"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/sv_main"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_consultant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/secondary_white"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textCommand">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_consultant"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/consultant_photo"/>

                    <TextView
                        android:id="@+id/tv_consultant_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/nama_lengkap_konsultan"
                        android:textColor="@color/primary_black"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"
                        app:layout_constraintTop_toTopOf="@id/img_consultant"
                        app:layout_constraintStart_toEndOf="@id/img_consultant"/>

                    <TextView
                        android:id="@+id/tv_consultant_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/kategori"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="11sp"
                        android:lineSpacingExtra="5sp"
                        app:layout_constraintBottom_toBottomOf="@id/img_consultant"
                        app:layout_constraintStart_toEndOf="@id/img_consultant"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary_blue"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@+id/textCommand">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pesan_konsultan"
                        android:textColor="@color/primary_black"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2sp"/>

                    <TextView
                        android:id="@+id/tv_consultant_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="12sp"
                        android:lineSpacingExtra="5sp"
                        app:layout_constraintBottom_toBottomOf="@id/img_consultant"
                        app:layout_constraintStart_toEndOf="@id/img_consultant"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/judul_konsultasi"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <TextView
                android:id="@+id/tv_fill_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strategi_marketing_menggunakan_digitalisasi"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/secondary_black"/>

            <View
                android:id="@+id/lineZero"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/tv_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ringkasan_masalah"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <TextView
                android:id="@+id/tv_fill_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ya_jadi_masalah_saya_itu_gini_pak_iya_gitu_jadi_saya_itu_gini_dan_gitu_terus_ada_gitu_ada_gini_lagi_iya_begitu_jadi_begitu_dan_begini_pak"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/secondary_black"/>

            <View
                android:id="@+id/lineOne"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/tv_preference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/preferensi_konsultasi"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <TextView
                android:id="@+id/tv_fill_preferences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ofline_dan_online"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/secondary_black"/>

            <View
                android:id="@+id/lineTwo"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lokasi_konsultasi"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <TextView
                android:id="@+id/tv_fill_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/jauh_menuju_hatinya_yang_jauh_disana"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/secondary_black"/>

            <View
                android:id="@+id/lineThree"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/tv_link_conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/link_conference"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_open_conference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/link_conference"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/inactive"
                app:backgroundTint="@color/gray"
                app:cornerRadius="8dp"/>

            <TextView
                android:id="@+id/tv_link_conference_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/link_conference_akan_diberikan_oleh_konsultan_5_menit_sebelum_waktu_konsultasi"
                android:fontFamily="@font/inter_regular"
                android:textSize="12sp"
                android:lineSpacingExtra="4sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/label"/>

            <View
                android:id="@+id/lineFour"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/waktu_konsultasi"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/pilih_waktu_konsultasi"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/black"
                app:iconGravity="textEnd"
                app:iconTint="@color/green"
                app:iconPadding="10dp"
                app:strokeColor="@color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"/>

            <View
                android:id="@+id/lineFive"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/tv_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dokumen_dokumen"
                android:fontFamily="@font/inter_semibold"
                android:textSize="16sp"
                android:lineSpacingExtra="0sp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primary_black"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/unggah_edit_dokumen"
                android:textAllCaps="false"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:lineSpacingExtra="8sp"
                android:textColor="@color/black"
                app:iconGravity="textEnd"
                app:iconTint="@color/green"
                app:iconPadding="10dp"
                app:strokeColor="@color/black"
                app:backgroundTint="@color/white"
                app:cornerRadius="8dp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/biaya_konsultasi"
            android:textColor="@color/label"
            android:fontFamily="@font/inter_regular"
            android:textSize="12sp"
            android:lineSpacingExtra="4sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="240dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_fill_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="200dp"
            android:layout_marginBottom="16dp"
            android:text="@string/rp_5_000_000"
            android:textColor="@color/primary_black"
            android:fontFamily="@font/inter_semibold"
            android:textSize="20sp"
            android:lineSpacingExtra="4sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_pay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cost" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="106dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="24dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/lanjutkan_bayar"
            android:textAllCaps="false"
            android:fontFamily="@font/inter_medium"
            android:textSize="14sp"
            android:lineSpacingExtra="8sp"
            app:backgroundTint="@color/primary_blue"
            app:cornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>